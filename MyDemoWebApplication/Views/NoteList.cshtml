@model MyDemoWebApplication.Models.NotesViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="row">
        <div class="col-md-9">
            @{
                <div class="form-group row">
                    <div class="col-12">
                        <button class="col-md-6 btn-block btn btn-primary" @Url.Action("Notes", "Notes", new { Note = "", NoteID = 0, isUpdate = false })>Add</button>
                    </div>
                </div>
                if (Model.NotesList != null)
                {
                    foreach (var item in Model.NotesList)
                    {
                        <div class="form-group row">
                            <div class="col-12">
                                <h2 class="mb-1 mt-4">@item.NoteID</h2>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <h2 class="mb-1 mt-4">@item.Note</h2>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <h2 class="mb-1 mt-4">@item.CreatedDate</h2>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <h2 class="mb-1 mt-4">@item.UpdatedDate</h2>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <button class="col-md-6 btn-block btn btn-primary" @Url.Action("Notes", "Notes", new { Note = item.Note, NoteID = item.NoteID, isUpdate = true })>Edit</button>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <button class="col-md-6 btn-block btn btn-primary" @Url.Action("DeleteNote", "Notes", new { NoteID = item.NoteID })>Delete</button>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</body>
</html>
